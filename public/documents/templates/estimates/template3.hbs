    <div class="container">

        <div class="head">
            <!--Début de l'en-tête de facture contenant les coordonnées client-->
            <div class="logo_container">
            <img src="{{contact.logo}}" alt="{{contact.name}}" width="120" height="120">
            </div>
          <div class="entreprise">   
            <ul>
                <li>{{company.name}}</li>
                <li>{{company.contact.street}}, {{company.contact.number}}</li>
                <li>{{company.contact.zip}} {{company.contact.town}}</li>
                <li>{{company.contact.country}}</li>
                <li>Tel: {{company.contact.phoneMain}} {{company.contact.phoneSec}}</li>
                <li>Fax: {{company.contact.fax}}</li>
                <li>E-mail: {{company.contact.mail}}</li>
            </ul>
            </div>
            <section class="num_facture">
            <h1>Devis</h1></br>
            <p>Numéro de devis:</br> {{numFacture}}</p></br>
            <p>Date:</br> {{dateFacture}}</p></br>
            </section>
        </div>
        <div class="info_client">
                <ul>
                    <li>{{client.contactPerson.civility}} {{client.contactPerson.firstname}} {{client.contactPerson.lastname}}</li>
                    <li>{{client.billingInfo.street}}, {{client.billingInfo.number}}</li>
                    <li>{{client.billinginfo.zip}} {{client.billingInfo.town}}</li>
                    <li>{{client.billingInfo.country}}</li>
                    <li>Nom du projet: {{project.name}}</li>
                    <li>Date de début: {{project.startAt}}</li>
                    <li>Date de fin: {{project.endAt}}</li>
                </ul>
        </div>
        <table class="achats">
            <tr class="thead">
                <th class="fact_article">Article</th>
                <th class="fact_description">Description</th>
                <th class="fact_qte">Qte</th>
                <th class="fact_pu">P/U</th>
                <th class="fact_amount">Montant</th>
            </tr>
            {{#articles}}
            <tr class="article_lines">
                <td class="fact_article">{{name}}</td>
                <td class="fact_description">{{description}}</td>
                <td class="fact_qte">{{quantity}}</td>
                <td class="fact_pu">{{unitPrice}}</td>
                <td class="fact_amount">{{amount}}</td>
            </tr>
            {{/articles}}
        </table>
