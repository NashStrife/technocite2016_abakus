    <div class="container">
        <div class="head">
            <!--Début de l'en-tête de facture contenant les coordonnées client-->
            <img src="{{contact.logo}}" alt="{{contact.name}}" width="470" height="470">
                
            <ul>
                <li>{{company.name}}</li>
                <li>{{company.contact.street}}, {{company.contact.number}}</li>
                <li>{{company.contact.zip}} {{company.contact.town}}</li>
                <li>{{company.contact.country}}</li>
                <li>Tel: {{company.contact.phoneMain}} {{company.contact.phoneSec}}</li>
