                <li>E-mail: {{company.contact.mail}}</li>
            </ul>
            <section class="num_facture">
            <h1>Facture</h1></br>
            <p>{{numFacture}}</p></br>
            <p>{{dateFacture}}</p></br>
            </section>
        </div>
        <div class="info_client">
                <ul>
                    <li>{{client.contactPerson.civility}} {{client.contactPerson.firstname}} {{client.contactPerson.lastname}}</li>
                    <li>{{client.billingInfo.street}}, {{client.billingInfo.number}}</li>
                    <li>{{client.billingInfo.town}}</li>
                    <li>{{{client.billingInfo.country}}</li>
                </ul>
        </div>
        <table>
            <tr>
                <th>Article</th>
                <th>Description</th>
                <th>Qte</th>
                <th>P/U</th>
                <th>Montant</th>
            </tr>
            {{#articles}}
            <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{quantity}}</td>
                <td>{{unitPrice}}</td>
                <td>{{amount}}</td>
            </tr>
            {{/articles}}
        </table>
